<div class="row full-width">
  <div class="large-6 columns">
    <label>CSS (input)</label>
    {{devtools-textarea value=inputText placeholder="Input CSS" rows=20}}
    <div class="form-group">
      <label for="browsers">
        Browsers
        <small>please check <a href="https://github.com/ai/browserslist" target="_blank">browserslist</a></small>
      </label>
      {{input type="text" value=browsers name="browsers" class="form-control"}}
    </div>
  </div>
  <div class="large-6 columns">
    <label>Autoprefixer CSS (output)</label>
    {{textarea value=outputText placeholder="Output text" rows=20}}
  </div>
</div>
